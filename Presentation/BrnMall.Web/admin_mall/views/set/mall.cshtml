@model BrnMall.Web.MallAdmin.Models.MallModel

@section header{
    <title>商城设置</title>
    <link type="text/css" rel="stylesheet" href="/admin_mall/content/css/site.css"/>
    <script type="text/javascript" src="/admin_mall/scripts/jquery.js"></script>
    <script type="text/javascript" src="/admin_mall/scripts/jquery.validate.js"></script>
    <script type="text/javascript" src="/admin_mall/scripts/jquery.validate.unobtrusive.js"></script>
}

@section body{
<h1 class="rightH1">
系统设置 &gt;&gt; 商城设置
<div class="right">
<div class="clear"></div>
</div>
<div class="clear"></div>
</h1>
@using (Html.BeginForm())
{
<div class="addTable">
<table width="100%">
     <tr>
    <td width="180px" align="right">游客使用购物车：</td>
    <td>
       <p>
    <label>@Html.RadioButtonFor(x => x.IsGuestSC, 1)允许</label>
    <label>@Html.RadioButtonFor(x => x.IsGuestSC, 0)不允许</label>
    <br />
    </p>
    </td>
    </tr>

         <tr>
    <td align="right">游客购物车商品数量：</td>
    <td>
   @Html.TextBoxFor(x => x.GuestSCCount, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.GuestSCCount)
    </td>
    </tr>

         <tr>
    <td align="right">会员购物车商品数量：</td>
    <td>
   @Html.TextBoxFor(x => x.MemberSCCount, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.MemberSCCount)
    </td>
    </tr>

         <tr>
    <td align="right">订单编号格式：</td>
    <td>
   @Html.TextBoxFor(x => x.OSNFormat, new { @class = "input", size = "35" }){storeid}代表店铺id,{uid}代表用户id,{srid}代表配送地区id,{addtime}代表下单时间 @Html.ValidationMessageFor(x => x.OSNFormat)
    </td>
    </tr>
             <tr>
    <td align="right">浏览历史数量：</td>
    <td>
   @Html.TextBoxFor(x => x.BroHisCount, new { @class = "input", size = "35" })单位为天 @Html.ValidationMessageFor(x => x.BroHisCount)
    </td>
    </tr>

                 <tr>
    <td align="right">最大配送地址：</td>
    <td>
   @Html.TextBoxFor(x => x.MaxShipAddress, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.MaxShipAddress)
    </td>
    </tr>

                     <tr>
    <td align="right">商品收藏夹最大容量：</td>
    <td>
   @Html.TextBoxFor(x => x.FavoriteProductCount, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.FavoriteProductCount)
    </td>
    </tr>
    <tr>
    <td align="right">店铺收藏夹最大容量：</td>
    <td>
   @Html.TextBoxFor(x => x.FavoriteStoreCount, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.FavoriteStoreCount)
    </td>
    </tr>
      <tr>
    <td align="right">订单逾期未收货，系统自动收货：</td>
    <td>
   @Html.TextBoxFor(x => x.OrderAutoReceive, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.OrderAutoReceive) 天
    </td>
    </tr>
      <tr>
    <td align="right">订单逾期未支付，系统自动取消：</td>
    <td>
   @Html.TextBoxFor(x => x.OrderAutoCancel, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.OrderAutoCancel) 分钟
    </td>
    </tr>


    <tr>
    <td align="right">&nbsp;</td>
    <td>
    <a href="" class="addBt" id="sumbitBut" ><img src="/admin_mall/content/images/submit.jpg" /></a>
            <script type="text/javascript">
                $(function () {
                    $("#sumbitBut").click(function () {
                        $("form:first").submit();
                        return false;
                    })
                });
        </script>
    </td>
    </tr>
  <tr>
    <td align="right">&nbsp;</td>
    <td>&nbsp;</td>
    </tr>
</table>
</div>
}
}
