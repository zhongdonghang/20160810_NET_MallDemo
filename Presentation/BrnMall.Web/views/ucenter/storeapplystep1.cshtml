<div id="memberR">
    <h2 id="memberRT">个人信息</h2>
    @using (Html.BeginForm("storeapplystep1", "UCenter", FormMethod.Post, new { id = "formstep1" }))
    {
        <table width="100%" border="0" cellpadding="0" cellspacing="0" class="memberTable">
          <tr>
            <th width="100" align="right">店铺名称：</th>
            <td>
               @Html.TextBoxFor(x => x.StoreName, new { @class = "text", @name = "StoreName", size = "35", @maxlength = "15", @style = "width:200px" })
               <span class="tip">@Html.ValidationMessageFor(x => x.StoreName)</span>
               </td>
          </tr>
          <tr>
            <th width="100" align="right">店铺类型：</th>
            <td>
            <p>
                <label>@Html.RadioButtonFor(x => x.Type, 0, new { @class = "checkbox" })个人</label>
                <label>@Html.RadioButtonFor(x => x.Type, 1, new { @class = "checkbox" })公司</label>
                <br />
            </p>
            </td>
          </tr>
           <tr>
            <th width="100" align="right">店主姓名：</th>
            <td>
               @Html.TextBoxFor(x => x.StoreKeeperName, new { @class = "text", @name = "StoreKeeperName", size = "35", @maxlength = "15", @style = "width:200px" })
               <span class="tip">@Html.ValidationMessageFor(x => x.StoreKeeperName)</span>
            </td>
          </tr>
           <tr>
            <th width="100" align="right">店主身份证：</th>
            <td>
               @Html.TextBoxFor(x => x.IdCard, new { @class = "text", @name = "IdCard", size = "35", @maxlength = "15", @style = "width:200px" })
               <span class="tip">@Html.ValidationMessageFor(x => x.IdCard)</span>
               </td>

          </tr>
           <tr>
            <th width="100" align="right">店主住址：</th>
            <td>
               @Html.TextBoxFor(x => x.Address, new { @class = "text", @name = "Address", size = "35", @maxlength = "15", @style = "width:200px" })
               <span class="tip">@Html.ValidationMessageFor(x => x.Address)</span>
               </td>

          </tr>
          <tr>
             <td align="right">&nbsp;</td>
             <td>
             <a href="" class="greenBT" style="font-size:14px; padding:3px 20px;" id="sumbitBut" >下一步</a>
                     <script type="text/javascript">
                         $(function () {
                             $("#sumbitBut").click(function () {
                                 document.getElementById("formstep1").submit();
                                 return false;
                             })
                         });
                 </script>
             </td>
          </tr>
        </table>
    }
</div>

<div class="clear"></div>
</div>
<div class="clear"></div>
</div>
